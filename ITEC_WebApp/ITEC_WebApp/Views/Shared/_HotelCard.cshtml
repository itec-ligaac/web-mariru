@model Hotel

<div class="card">
    <div class="card-header">
        @Model.Name
    </div>
    <div class="card-body">
        <h5 class="card-title">Hotel have @Model.Stars stars</h5>
        <p class="card-text">Description : @Model.Description </p>
        <p class="card-text">Available rooms : @Model.Rooms.Count() </p>
        <a asp-action="Rooms" asp-route-id="@Model.IdHotel" class="btn btn-primary">Book a room</a>
    </div>
</div>