@model Country

<div class="card">
    <div class="card-header">
        @Model.Name
    </div>
    <div class="card-body">
        <h5 class="card-title">About Country @Model.Name</h5>
        <p class="card-text">@Model.Details</p>
        <a asp-action="FindHotel" asp-controller="ExploreCities" asp-route-id="@Model.IdCountry" class="btn btn-primary">Find hotel</a>
    </div>
</div>